import eei::*;
import corectrl::*;

package pipeline {
    // ====================================================
    // * FIFO types
    // ====================================================
    // ID -> EX
    struct exq_type {
        addr: Addr         ,
        bits: Inst         ,
        ctrl: InstCtrl     ,
        imm : UIntX        ,
        expt: ExceptionInfo,
    }

    // EX -> MEM
    struct memq_type {
        addr      : Addr            ,
        bits      : Inst            ,
        ctrl      : InstCtrl        ,
        imm       : UIntX           ,
        expt      : ExceptionInfo   ,
        alu_result: UIntX           ,
        rs1_addr  : logic        <5>,
        rs1_data  : UIntX           ,
        rs2_data  : UIntX           ,
        br_taken  : logic           ,
        jump_addr : Addr            ,
    }

    // MEM -> WB
    struct wbq_type {
        addr      : Addr    ,
        bits      : Inst    ,
        ctrl      : InstCtrl,
        imm       : UIntX   ,
        alu_result: UIntX   ,
        mem_rdata : UIntX   ,
        csr_rdata : UIntX   ,
        raise_trap: logic   ,
    }
}
